{# templates/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription : Chicago 1930{% endblock %}

{% block back %}
<a href="{{ path('index')}}"><button class="button">retour</button></a>
{% endblock %}

{% block nav %}

{% endblock %}


{% block body %}
    <div class="register form-border col-10 col-sm-8 col-md-6 col-lg-4">

    <h1>inscription</h1>
    
        {{ form_start(form) }}
            {{ form_row(form.username, { 'attr' : { 'placeholder' : "Nom d'utilisateur" }} ) }}
            {{ form_row(form.email, { 'attr' : { 'placeholder' : "Adresse e-mail" }} ) }}
            {{ form_row(form.password.first, { 'attr' : { 'placeholder' : "Mot de passe" }} ) }}
            {{ form_row(form.password.second, { 'attr' : { 'placeholder' : "Mot de passe" }} ) }}

        <button type="submit" class="button col-5">S'inscrire !</button>
        {{ form_end(form) }}
    
    </div>
{% endblock %}

{% block classFooter %}
class="fixed-bot col-12"
{% endblock %}