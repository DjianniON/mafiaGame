{% extends 'Admin/admin_base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.monrole }}</td>
            </tr>
            <tr>
                <th>NbVictoires</th>
                <td>{{ user.nbVictoires }}</td>
            </tr>
            <tr>
                <th>Elo</th>
                <td>{{ user.elo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Accueil</a>

    {% if is_granted('ROLE_SUPER_ADMIN') %}<a href="{{ path('user_edit', {'id': user.id}) }}">Editer l'utilisateur</a>{% endif %}

    {% if is_granted('ROLE_SUPER_ADMIN') %}{{ include('user/_delete_form.html.twig') }}{% endif %}
{% endblock %}
